<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="@dimen/switch_padding"
        android:start="@dimen/switch_padding"
        android:end="@dimen/switch_padding"
        android:top="@dimen/switch_padding"
        android:gravity="center_vertical|fill_horizontal">
        <shape>
            <solid android:color="@color/main_colors_blue"/>
            <corners android:radius="@dimen/switch_radius"/>
            <size android:height="@dimen/switch_size"/>
        </shape>
    </item>

    <item
        android:width="12dp"
        android:height="2dp"
        android:top="10dp"
        android:right="40dp"
        android:gravity="center">
        <rotate
            android:fromDegrees="40">
            <shape android:shape="rectangle">
                <solid android:color="@color/monochrome_white"/>
            </shape>
        </rotate>
    </item>

    <item
        android:width="20dp"
        android:height="2dp"
        android:left="-18dp"
        android:top="0dp"
        android:gravity="center">
        <rotate
            android:fromDegrees="-50">
            <shape android:shape="rectangle">
                <solid android:color="@color/monochrome_white"/>
            </shape>
        </rotate>
    </item>
</layer-list>