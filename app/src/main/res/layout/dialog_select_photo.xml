<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/dialog_select_photo_choose_photo_from_memory"
        android:textSize="15sp"
        android:id="@+id/dialogChoosePhoto"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/dialog_select_photo_take_a_photo"
        android:textSize="15sp"
        android:id="@+id/dialogOpenCamera"
        android:gravity="center_vertical"
        android:layout_below="@+id/dialogChoosePhoto"/>

</RelativeLayout>