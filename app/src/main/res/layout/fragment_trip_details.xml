<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/trip_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/trip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:gravity="start"
                android:hint="@string/hint_title"
                android:maxLines="2"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryLight" />

            <LinearLayout
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/trip_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:maxLines="2"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/trip_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"

                    android:background="@null"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dates"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/trip_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@null"

                    android:hint="@string/hint_date"
                    android:maxLines="2"
                    android:padding="10dp"
                    android:textColor="@color/colorPrimary" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/trip_number_of_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="10dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/text_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/trip_number_of_days"
                        android:background="@null"
                        android:padding="10dp"

                        android:text="@string/text_days"
                        android:textColor="@color/colorPrimary" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/trip_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@null"

                android:gravity="start"
                android:hint="@string/hint_description"
                android:padding="10dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/edit_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:text="@string/edit"
                android:background="@color/colorPrimaryLight"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>