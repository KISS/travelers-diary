<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/trip_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@color/monochrome_gray" />

    <RelativeLayout
        android:id="@+id/trip_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/trip_image"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/trip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/main_colors_blue"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/monochrome_black"

            android:layout_below="@id/trip_title"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/trip_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/monochrome_black"

            android:textSize="16sp"
            android:layout_below="@id/trip_location"
            android:maxLines="1"
            android:ellipsize="end" />

    </RelativeLayout>

</RelativeLayout>